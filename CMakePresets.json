{
  "version": 2,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 22,
      "patch": 0
  },
  "configurePresets": [
      {
          "name": "xblinky",
          "displayName": "xblinky",
          "description": "xBlinky CM0",
          "generator": "Ninja",
          "environment": {
              "ARM_GCC_ROOT_FOLDER": "/Applications/ARM"
          },
          "binaryDir": "${sourceDir}/build/${presetName}",
          "cacheVariables": {
              "FETCHCONTENT_UPDATES_DISCONNECTED": "OFF",
              "CMAKE_BUILD_TYPE": "Debug",
              "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
              "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/_deps/platform_cmake-src/armgcc-cortex-m0.cmake",
              "GITHUB_BRANCH_TOOLCHAIN": "PLAT-1071"
          }
      },
      {
        "name": "blinky",
        "displayName": "blinky",
        "description": "Blinky CM0",
        "generator": "Ninja",
        "environment": {
            "ARM_GCC_ROOT_FOLDER": "/Applications/ARM",
            "CORTEX_TYPE": "cm0"
        },
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
            "FETCHCONTENT_UPDATES_DISCONNECTED": "OFF",
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
            "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/_deps/cmake-toolchains-src/arm-none-eabi-gcc.cmake",
            "GITHUB_BRANCH_TOOLCHAIN": "HEAD"
        }
    }
  ],
  "buildPresets": [
      {
          "name": "blinky",
          "configurePreset": "blinky"
      }
  ]
}
